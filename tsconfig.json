{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "allowJs": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react",
        "downlevelIteration": true,
        "isolatedModules": true,
        "paths": {
            "src": ["./src"],
            "utils": ["./src/utils"]
        }
    }
}